type HMAC_CONTEXT_LENGTH = 1
type HMACContext = [HMAC_CONTEXT_LENGTH][8] // A convenient lie

type SIGNAL_MESSAGE_MAC_LENGTH = 8

hmac_init : {n} [n][8] -> // Key
            HMACContext
hmac_init = undefined

hmac_update : {n} [n][8] -> // Data
              HMACContext -> HMACContext
hmac_update = undefined

hmac_final : HMACContext ->
             [8 + SIGNAL_MESSAGE_MAC_LENGTH][8] // Signal buffer
hmac_final = undefined
